{% extends 'admin.html.twig' %}

{% block title %}Artwork index
{% endblock %}

{% block body %}
	<h1 class="h1-dashboard-artwork">Tableau de bord des oeuvres de street art du jeu</h1>
	<div class="new-artwork-link-bloc">
		<a href="{{ path('app_admin_artwork_new') }}" class="new-artwork-link">Enregistrer une nouvelle oeuvre</a>
	</div>

	<div class="artwork-search">
		{{ form(form) }}
			<a class="button-reset-search-artwork" href="{{ path('app_admin_artwork_index') }}">Clear
			</a>
			<a href="{{ path('app_admin_dashboard') }}" class="artwork-back-dashboard-link">Retourner vers le tableau de bord</a>
		</div>

		<table class="table-dashboard-artwork">
			<thead class="thead-dashboard-artwork">
				<tr>
					<th class="th-dashboard-artwork">Id</th>
					<th class="th-dashboard-artwork">Longitude</th>
					<th class="th-dashboard-artwork">Latitude</th>
					<th class="th-dashboard-artwork">Ville</th>
					<th class="th-dashboard-artwork">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for artwork in artworks %}
					<tr class="tr-dashboard-artwork">
						<td class="td-dashboard-artwork">{{ artwork.id }}</td>
						<td class="td-dashboard-artwork">{{ artwork.longitude }}</td>
						<td class="td-dashboard-artwork">{{ artwork.latitude }}</td>
						<td class="td-dashboard-artwork">{{ artwork.city }}</td>
						<td class="td-dashboard-artwork">
							<a href="{{ path('app_admin_artwork_edit', {'id': artwork.id}) }}" class="a-edit-dashboard-artwork">
								<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512" width="15px"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="#ff0000" d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"/></svg>
							</a>
							<br>
							{{ include('admin/artwork/_delete_form.html.twig') }}
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="5">no records found</td>
		</tr>
	{% endfor %}
</tbody></table><div class="pagination-artwork">{{ knp_pagination_render(artworks) }}</div>{% endblock %}

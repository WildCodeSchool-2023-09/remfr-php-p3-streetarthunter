{% extends 'admin.html.twig' %}

{% block title %}Gestion des messages{% endblock %}

{% block body %}
    <a class='dashboard-link' href="{{ path('app_admin_dashboard') }}">Dashboard</a>
    <h1 class='admin-messages-h1'>Gestion des messages</h1>
    <div class='formulaire-user'>
        {{ form(form) }}
        <a href="{{ path('app_admin_contact_index') }}"><button>Reset</button></a>
    </div>

    <div class='table-user'>
        <table class="table table-messages">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.lastname }}</td>
                    <td>{{ contact.firstname }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.message }}</td>
                    <td>
                        <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" width='30px'><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="#000000" d="M288 80c-65.2 0-118.8 29.6-159.9 67.7C89.6 183.5 63 226 49.4 256c13.6 30 40.2 72.5 78.6 108.3C169.2 402.4 222.8 432 288 432s118.8-29.6 159.9-67.7C486.4 328.5 513 286 526.6 256c-13.6-30-40.2-72.5-78.6-108.3C406.8 109.6 353.2 80 288 80zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1c3.3 7.9 3.3 16.7 0 24.6c-14.9 35.7-46.2 87.7-93 131.1C433.5 443.2 368.8 480 288 480s-145.5-36.8-192.6-80.6C48.6 356 17.3 304 2.5 268.3c-3.3-7.9-3.3-16.7 0-24.6C17.3 208 48.6 156 95.4 112.6zM288 336c44.2 0 80-35.8 80-80s-35.8-80-80-80c-.7 0-1.3 0-2 0c1.3 5.1 2 10.5 2 16c0 35.3-28.7 64-64 64c-5.5 0-10.9-.7-16-2c0 .7 0 1.3 0 2c0 44.2 35.8 80 80 80zm0-208a128 128 0 1 1 0 256 128 128 0 1 1 0-256z"/></svg></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Pas de messages trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation-user">
            {{ knp_pagination_render(contacts) }}
        </div>
    </div>
    
{% endblock %}
